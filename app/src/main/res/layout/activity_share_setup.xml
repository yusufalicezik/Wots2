<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Share.ShareSetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/yuklenenResimSetup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/yuklenenResimTextSetup"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search_arkaplan"
        android:ems="10"
        android:fontFamily="@font/antic_didone"
        android:hint="Bu fotoğraf hakkında bir şeyler yaz"
        android:inputType="textMultiLine|textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yuklenenResimSetup" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        android:background="@drawable/buton_bordered_arkaplan"
        android:onClick="verileriYazPostuPaylas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/yuklenenResimTextSetup"
        app:layout_constraintStart_toStartOf="@+id/yuklenenResimTextSetup"
        app:layout_constraintTop_toBottomOf="@+id/yuklenenResimTextSetup"
        app:srcCompat="@drawable/ic_next" />

</android.support.constraint.ConstraintLayout>