        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/btn_cancel2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
